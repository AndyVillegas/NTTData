@model App.Models.Movimiento.MovimientoFormViewModel

@{
    ViewData["Title"] = "Movimiento - Crear";
}

<h1>Crear</h1>

<h4>Formulario de movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="CuentaId" class="control-label"></label>
                <select asp-for="CuentaId" asp-items="@Model.Cuentas" class="form-control" >
                </select>
                <span asp-validation-for="CuentaId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="TipoMovimiento" class="control-label"></label>
                <select asp-for="TipoMovimiento" asp-items="@Model.TiposMovimiento" class="form-control" >
                </select>
                <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
